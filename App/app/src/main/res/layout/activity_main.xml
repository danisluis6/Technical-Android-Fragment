<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.enclaveit.multiplefragment.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.example.enclaveit.multiplefragment.fragments.FragmentTop"
            android:id="@+id/frTop"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.example.enclaveit.multiplefragment.fragments.FragmentNav"
            android:id="@+id/frNav"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <fragment
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="com.example.enclaveit.multiplefragment.fragments.FragmentLeftBar"
                android:id="@+id/frLeftBar"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <fragment
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="com.example.enclaveit.multiplefragment.fragments.FragmentContent"
                android:id="@+id/frContent"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>